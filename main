/*
Créer un jeu du pendu
V 0) créer un dictionnaire avec des mots contenus
V 1) choisir de facon aléatoire un mot dans le dictionnaire
V 2) afficher au joueur le mot retenu aléatoirement sous forme d'étoiles
V 3) demander au joueur de saisir 1 lettre
4) si la lettre est dans le mot alors les étoiles disparaissent pour faire apparaitre la lettre trouvée
5) si la lettre n'est pas dans le mot alors le joueur peurd une chance. le joueur a 5 chances
*/

// Créer la boucle principale du jeu
let play = new Boolean("true");

while(playGame = play){
  play = prompt("Voulez vous continuer la partie ? Tapez 'y'")
  if(play != 'y'){
    play = false;

  }else{
    // Générer une liste de mots
    let wordsList = ["React", "vu", "Angular", "Python", "Java"];

    // Créer un choix aléatoire d'un nombre dans le rang compris entre 0 et le dernier indexe du array wordsList
    let indexMin = 0;
    let indexMax = wordsList.length;
    let number = Math.random(indexMax)*(indexMax - indexMin);
    let finalNumber = Math.round(number);
    
    // Afficher un mot du array de façon aléatoire
    let wordChoice = wordsList[finalNumber];
    console.log(wordChoice); 

    // afficher le mot sous forme d'étoiles
    let motCache = []
    for(let i of wordChoice){
      i = "*";
      motCache=motCache+i
    }
    console.log(motCache)

    // instantiantion du compteur de tentative
    let count = 0
    // boucle secondaire de jeu 

    let letter =new Array;
    let unMaskWord = new Array;

    while(count <= 2){
      count++
      test = prompt("Tapez une lettre que vous pensez être dans le mot mystère")

      for (const [index, element] of Object.entries(wordChoice)){
        if (element === test){
          letter = element;
          unMaskWord.splice(index, index+1, letter)
        }else{
          letter = "*";
          unMaskWord.splice(index, index+1, letter)
        }
      }
      console.log(unMaskWord.toString())
    }
  }
}
